<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cz3002.sharetolearn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.Pyp.PypActivity"></activity>
        <activity
            android:name=".View.Discussion.DiscussionActivity"
            android:label="@string/title_activity_discussion" />
        <activity
            android:name=".View.CourseReview.CourseReviewListActivity"
            android:label="Reviews" />
        <activity
            android:name=".View.CourseReview.CourseReviewPostActivity"
            android:label="Write a review" />
        <activity
            android:name=".View.Discussion.AddDiscussion"
            android:label="@string/title_activity_add_discussion" />
        <activity
            android:name=".View.Pyp.AddPYP"
            android:label="@string/title_activity_add_pyp" />
        <activity
            android:name=".View.AddCourseActivity"
            android:label="@string/title_activity_add_course">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".View.CourseReview.CourseReviewActivity"
            android:label="@string/title_activity_course_review" />
        <activity
            android:name=".View.DiscussionPypChatActivity"
            android:label="@string/title_activity_discussion_pyp_chat" />
        <activity
            android:name=".View.MainFeed"
            android:label="@string/title_activity_main_feed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.SignUp" />
        <activity android:name=".View.SignIn" />
        <activity android:name=".View.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>