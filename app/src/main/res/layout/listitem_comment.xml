<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/course_card_view"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:background="@color/colorLightGrey"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/discussion_comment"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="CZ2005 Help me please this is my comment for this question"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:padding="5dp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/postDetails"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Posted by Jessica since 5 minutes"
                    android:textColor="@color/colorGrey"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:padding="5dp"
                    android:layout_below="@+id/discussion_comment"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginBottom="-10dp"
                        android:src="@drawable/ic_upvote_foreground">
                    </ImageView>
                    <TextView
                        android:id="@+id/comment_vote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/colorGrey"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        android:gravity="center"
                        android:layout_alignParentRight="true"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-10dp"
                        android:src="@drawable/ic_downvote_foreground">
                    </ImageView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>